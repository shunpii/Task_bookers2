<p id="notice"></p>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前", class:"form-control name" %></div>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <div><%= f.text_area :introduction, autofocus: true, id:"user_introduction", class:"form-control introduction" %></div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
