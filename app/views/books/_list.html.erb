

<div class="col-md-3">
      <h2>User info</h2>

      <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>


      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
	          <th>name</th>
	          <th></th>
          </tr>
          <tr>
	          <th>introduction</th>
	          <th></th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "fa-solid fa-user-gear", edit_user_path(:id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2>New book</h2>
      <%= form_with model:@books, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
</div>