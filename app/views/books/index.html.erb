<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <%= attachment_image_tag @user, :image, :fill, 60, 60, format: 'jpeg' %>
            <table class="table">
               <tbody>
                   <tr></tr>
                   <tr>
	                  <th>name</th>
	                  <th></th>
                   </tr>
                   <tr>
	                  <th>introduction</th>
	                  <th></th>
                   </tr>
               </tbody>
            </table>
            <div class="row">
                <%= link_to edit_user_path(:id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' do %>
                  <i class="fa-solid fa-user-gear"></i>
                <% end %>
            </div>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book, local:true do |f| %>
              <div class="form-group">
                <label for="book_title">Title</label>
                <div>
                  <%= f.text_field :title %>
                </div>
              </div>
              <div class="form-group">
                  <label for="book_opinion">Opinion</label>
              </div>
                <div>
                  <%= f.text_area :body %>
                </div>
              <div class="form-group">
                <%= f.submit 'Creat Book', class: 'btn btn-success' %>
              </div>
            <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
           <h2>Books</h2>
           <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                       <th></th>
                       <th>Title</th>
                       <th>Opinion</th>
                       <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= attachment_image_tag @user, :image, :fill, 60, 60, format: 'jpeg' %></td>
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
