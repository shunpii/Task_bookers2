<p id="notice"></p>
<div class="container px-5 px-sm-0">
    <div class="row">
        <%= render 'books/list', books: @books %>
        <div class="col-md-8 offset-md-1">
           <h2>Books</h2>
           <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                       <th></th>
                       <th>Title</th>
                       <th>Opinion</th>
                       <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= attachment_image_tag @user, :image, :fill, 60, 60, format: 'jpeg' %></td>
                            <td><%= book.title %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
